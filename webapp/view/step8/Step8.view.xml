<mvc:View
	controllerName="onem.seya.walkthrough.controller.step8.Step8"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	xmlns:c="sap.ui.core"
	displayBlock="true"
	height="100%"
	busyIndicatorDelay="0"
>
	<Page
		showNavButton="true"
		navButtonPress="navBackHandler"
	>
		<content>
			<Button
				text="{i18n>showHelloButtonText}"
				press="onShowHello"
			/>
			<Input
				value="{/recipient/name}"
				description="Hello {/recipient/name}"
				valueLiveUpdate="true"
				width="60%"
			/>
		</content>
	</Page>
</mvc:View>